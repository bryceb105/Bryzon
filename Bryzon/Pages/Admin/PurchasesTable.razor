<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        @if (Checkout?.Count() > 0)
        {
            @foreach (Checkout d in Checkout)
            {
                <tr>
                    <th>@d.Name</th>
                    <th>Zip Code: @d.Zip</th>
                    <th>BookTitle</th>
                    <th>Quantity</th>

                    <td>
                        <button class="btn btn-small btn-danger" @onclick="@(x => PurchaseSelected.InvokeAsync(d.CheckoutId))">
                            @ButtonLabel
                        </button>
                    </td>
                </tr>

                @foreach(BasketLineItem bli in d.Lines)
                {
                    <tr>
                        <td colspan="2"></td>
                        <td>@bli.Book.Title</td>
                        <td>@bli.Quantity</td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Orders</td>
            </tr>
        }
    </tbody>

</table>

@code {

    [Parameter]
    public string TableTitle { get; set; } = "Purchases";

    [Parameter]
    public IEnumerable<Checkout> Checkout { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Purchased";

    [Parameter]
    public EventCallback<int> PurchaseSelected { get; set; }

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bryzon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/lib/css/bootstrap-utilities.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">Bryzon Books</div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            @*Something New - Bootstrap Card:*@
            <div class="card bg-dark text-white p-2" style="width: 18rem;">
                <img class="card-img-top" src="~/Images/BryzonLogo.jpg" alt="Bryzon Logo">
                <div class="card-body">
                    <h5 class="card-title">Welcome to Bryzon</h5>
                    <p class="card-text">We've got every book from Y to Z ;)</p>
                </div>
            </div>
            <div class="p-2">
                <vc:types></vc:types>
            </div>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
        @*Something New - Bootsrap Accordion*@
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Please leave us a rating!
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <p>★★★★★</p>
                        <p>5 stars? Thank you!</p>
                    </div>
                </div>
            </div>
        </div>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2022 - Bryzon
                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/js/bootstrap.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)
</body>
</html>
